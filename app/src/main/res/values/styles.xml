    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="F1ColorBackground">@color/fifa_white</item>
        <item name="F1ColorHeroBackground">@color/fifa_white</item>
        <item name="F1ColorPrimary">@color/fifa_warm_red</item>
        <item name="F1ColorHero">@color/fifa_warm_red</item>
        <item name="F1ColorSecondary">@color/fifa_carbon_black</item>
        <item name="F1ColorPrimaryInverse">@color/fifa_white</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FixturesItemLLy">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FifaTab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">?F1ColorPrimaryInverse</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <!--<item name="tabSelectedFont">@font/titillium_web_bold</item>
        <item name="tabNormalFont">@font/titillium_web_regular</item>-->
    </style>



    <style name="F1FixedTab" parent="FifaTab">
        <item name="tabMode">fixed</item>
    </style>

    <style name="F1ScrollableTab" parent="FifaTab">
        <item name="tabMode">scrollable</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <!--<item name="android:textColor">@color/tab_color_normal</item>-->
        <!--<item name="android:fontFamily">@font/titillium_web_regular</item>-->
        <item name="textAllCaps">false</item>
    </style>

    <style name="F1FixedTab.Red" parent="F1FixedTab">
        <item name="tabIndicatorColor">?F1ColorPrimaryInverse</item>
        <item name="tabBackground">?F1ColorPrimary</item>
    </style>

